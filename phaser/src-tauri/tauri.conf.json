{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "2048",
  "version": "0.1.0",
  "identifier": "com.andreldm.2048",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173/",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "2048",
        "width": 600,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "incognito": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "deb",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
